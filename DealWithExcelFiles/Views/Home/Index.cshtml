@model DealWithExcelFiles.ViewModels.FileUploadViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<h2>Upload Excel File</h2>

<form asp-controller="Home" asp-action="Upload" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="ExcelFile"></label>
        <input asp-for="ExcelFile" type="file" class="form-control" />
        <span asp-validation-for="ExcelFile" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Upload and Process</button>
</form> 